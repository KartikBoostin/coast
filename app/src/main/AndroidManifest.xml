<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.classistant">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StudentRegisterActivity" />
        <activity android:name=".AddSubjectStudentActivity" />
        <activity android:name=".AddSubjectTeacherActivity" />
        <activity android:name=".RoutineActivity" />
        <activity android:name=".StudentMainActivity" />
        <activity android:name=".TeacherRegisterActivity" />
        <activity android:name=".TeacherMainActivity" />
        <activity android:name=".activity_splash_screen_student" />
        <activity android:name=".activity_splash_screen_teacher" />
        <activity android:name=".SplashScreenMainActivity"></activity>
    </application>

</manifest>